<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmountain"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="1000"
        android:textColor="#29E614"
        android:textSize="34sp" />

    <FrameLayout
        android:id="@+id/frame_bar"
        android:layout_width="585dp"
        android:layout_height="191dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bgspin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.tragaperras.ImageViewScrolling.ImageViewScrolling
                android:id="@+id/image"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:padding="30dp" />

            <com.example.tragaperras.ImageViewScrolling.ImageViewScrolling
                android:id="@+id/image2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:padding="30dp" />

            <com.example.tragaperras.ImageViewScrolling.ImageViewScrolling
                android:id="@+id/image3"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:padding="30dp" />


        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/btn_up"
        android:layout_width="34dp"
        android:layout_height="212dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="61dp"
        android:layout_toRightOf="@id/frame_bar"
        android:src="@drawable/up" />

    <ImageView
        android:id="@+id/btn_down"
        android:layout_width="34dp"
        android:layout_height="212dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@id/frame_bar"
        android:visibility="gone"
        android:src="@drawable/down" />


</RelativeLayout>